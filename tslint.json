{
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "indent": [
      true,
      "spaces",
      4
    ],
    "semicolon": [
      true,
      "never"
    ]
  },
  "linterOptions": {
    "exclude": [
      "typings/**/*"
    ]
  },
  "jsRules": {
    "indent": [
      true,
      "spaces",
      4
    ],
    "semicolon": [
      true,
      "never"
    ]
  }
}
